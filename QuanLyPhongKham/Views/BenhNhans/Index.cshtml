@model QuanLyPhongKham.Models.BenhNhanListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách bệnh nhân</h1>

<p>
    <a asp-action="Create">Thêm bệnh nhân</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.BenhNhans.First().HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BenhNhans.First().GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BenhNhans.First().NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BenhNhans.First().DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BenhNhans.First().SDT)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BenhNhans.First().Email)
            </th> 
            <th>
                @Html.DisplayNameFor(m => m.BenhNhans.First().Avatar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BenhNhans) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>  
                <img src="~/uploads/@item.Avatar" width="100" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
<!-- Pagination Controls -->
<nav>
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
        </li>

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>
