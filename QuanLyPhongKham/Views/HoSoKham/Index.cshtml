@model IEnumerable<QuanLyPhongKham.Models.HoSoKham>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách hồ sơ khám bệnh</h1>

<p>
    <a asp-action="Create">Thêm hồ sơ khám</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaHSK)
            </th>
            <th>
                Bệnh nhân
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrieuChung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChanDoan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KetLuan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKham)
            </th>
            <th>
                Bác sĩ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHSK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BenhNhan.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrieuChung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChanDoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KetLuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bacsi.HoTen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
