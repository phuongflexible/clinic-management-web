@model QuanLyPhongKham.Models.ChiTietToaThuoc

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm chi tiết toa thuốc</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToaThuocId" class="control-label"></label>
                <select asp-for="ToaThuocId" class ="form-control" asp-items="ViewBag.ToaThuocId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThuocId" class="control-label"></label>
                <select asp-for="ThuocId" class ="form-control" asp-items="ViewBag.ThuocId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CachDung" class="control-label"></label>
                <input asp-for="CachDung" class="form-control" />
                <span asp-validation-for="CachDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
