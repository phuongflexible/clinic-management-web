@model QuanLyPhongKham.Models.LichHenListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách lịch hẹn</h1>

<p class="add">
    <a class="nav-link text-white" asp-action="Create">Đặt lịch hẹn</a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" placeholder="Tìm kiếm" class="form-control me-2" />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Bệnh nhân
            </th>
            <th>
                Bác sĩ
            </th>
            <th>
                Lễ tân
            </th>
            <th>
                @Html.DisplayNameFor(l => l.Appointments.First().NgayGio)
            </th>
            <th>
                @Html.DisplayNameFor(l => l.Appointments.First().TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BenhNhan.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BacSi.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeTan.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a class="nav-link text-white edit" asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a class="nav-link text-white detail"asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a class="nav-link text-white delete" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
<!-- Pagination Controls -->
<nav>
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
        </li>

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>