@model QuanLyPhongKham.Models.LichHen

@{
    ViewData["Title"] = "Create";
}

<h1>Đặt lịch hẹn</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BenhNhanId" class="control-label"></label>
                <select asp-for="BenhNhanId" class ="form-control" asp-items="ViewBag.BenhNhanId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BacSiId" class="control-label"></label>
                <select asp-for="BacSiId" class="form-control" asp-items="ViewBag.BacSiId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LeTanId" class="control-label"></label>
                <select asp-for="LeTanId" class ="form-control" asp-items="ViewBag.LeTanId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NgayGio" class="control-label"></label>
                <input asp-for="NgayGio" class="form-control" />
                <span asp-validation-for="NgayGio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control" asp-items="Html.GetEnumSelectList<TrangThaiLichHen>()"></select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đặt lịch" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
