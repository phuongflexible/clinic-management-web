@model QuanLyPhongKham.Models.LichHen

@{
    ViewData["Title"] = "Delete";
}


<h3>Bạn có chắc muốn xóa cuộc hẹn này</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Bệnh nhân
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BenhNhan.HoTen)
        </dd>
        <dt class="col-sm-2">
            Bác sĩ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BacSi.HoTen)
        </dd>
        <dt class = "col-sm-2">
            Lễ tân
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeTan.HoTen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgayGio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayGio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
