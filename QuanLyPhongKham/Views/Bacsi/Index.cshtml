@model QuanLyPhongKham.Models.BacSiListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách bác sĩ</h1>

<p class="add">
    <a class="nav-link text-white" asp-action="Create">Thêm bác sĩ</a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" placeholder="Tìm kiếm" class="form-control me-2" />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(b => b.Doctors.First().HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(b => b.Doctors.First().ChuyenKhoa)
            </th>
            <th>
                @Html.DisplayNameFor(b => b.Doctors.First().SDT)
            </th>
            <th>
                @Html.DisplayNameFor(b => b.Doctors.First().Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Doctors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChuyenKhoa)
            </td>        
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="nav-link text-white edit" asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a class="nav-link text-white detail" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a class="nav-link text-white delete" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
<!-- Pagination Controls -->
<nav>
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
        </li>

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>
