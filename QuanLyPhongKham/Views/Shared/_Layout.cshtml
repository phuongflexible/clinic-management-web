<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyPhongKham</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyPhongKham.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="m-0">
    <div class="d-flex min-vh-100">
        <!--Sidebar-->
        <div class="bg-dark text-white p-3" style="width: 220px;">
            <h4 class="text-center mb-4"><a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Quản lý phòng khám ABC</a></h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="BenhNhans" asp-action="Index">Quản lý bệnh nhân</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Bacsi" asp-action="Index">Quản lý bác sĩ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="DuocSi" asp-action="Index">Quản lý dược sĩ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="ThuNgan" asp-action="Index">Quản lý thu ngân</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="LeTan" asp-action="Index">Quản lý lễ tân</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="LichHen" asp-action="Index">Quản lý lịch hẹn</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Thuoc" asp-action="Index">Quản lý thuốc</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="HoaDon" asp-action="Index">Quản lý hóa đơn</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="ThongKe" asp-action="Index">Thống kê báo cáo</a>
                </li>
                <partial name="_LoginPartial" />
            </ul>
        </div>

        <!--Content-->
        <div class="flex-grow-1 d-flex flex-column">
            <main class="flex-grow-1 p-4">
                @RenderBody()
            </main>

            <!--Footer-->
            <footer class="bg-light text-center py-3 border-top">
                <div class="container">
                    &copy; 2025 - QuanLyPhongKham - Phương Linh & Uyển Nhi
                </div>
            </footer>
        </div>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
